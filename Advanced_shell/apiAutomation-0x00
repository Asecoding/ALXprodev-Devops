#!/bin/bash

# Define output files
DATA_FILE="data.json"
ERROR_FILE="errors.txt"
POKEMON="pikachu"
API_URL="https://pokeapi.co/api/v2/pokemon/$POKEMON"

# Make API request
echo "Fetching data for $POKEMON from $API_URL..."

response=$(curl -s -w "%{http_code}" -o "$DATA_FILE" "$API_URL")

# Check if request was successful
if [ "$response" -ne 200 ]; then
    echo "$(date): Failed to fetch $POKEMON. HTTP status: $response" >> "$ERROR_FILE"
    echo "❌ Error logged to $ERROR_FILE"
else
    echo "✅ Data saved to $DATA_FILE"
fi

